{% extends "templates/base.html" %}

{% block content %}
<div x-data="emprestimoForm()">

  <div style="margin-left:16px"><br><h3>{{title}}</h3></div>
  <div class="card-body">
    <form>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label for="clienteid">Cliente</label>
            <select id="clienteid" class="form-control" x-model="form.clienteid">
              <option value="">Selecione</option>
              {% for c in clientes %}
                <option value="{{ c.clienteid }}">{{ c.nomerazaosocial }}</option>
              {% endfor %}
            </select>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <label for="livroid">Livro</label>
            <select id="livroid" class="form-control" x-model="form.livroid">
              <option value="">Selecione</option>
              {% for l in livros %}
                <option value="{{ l.livroid }}">{{ l.titulo }}</option>
              {% endfor %}
            </select>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <label for="valoremprestimo">Valor (R$)</label>
            <input type="number" step="0.01" id="valoremprestimo" class="form-control" x-model="form.valoremprestimo" placeholder="0.00">
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <label for="dataemprestimo">Data Empréstimo</label>
            <input type="date" id="dataemprestimo" class="form-control" x-model="form.dataemprestimo">
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <label for="datadevolucao">Data Devolução</label>
            <input type="date" id="datadevolucao" class="form-control" x-model="form.datadevolucao">
          </div>
        </div>
      </div>

      <button type="button" @click="insertForm()" class="btn btn-primary mt-4">Salvar</button>
      <a href="/emprestimos/ManutEmprestimos" class="btn btn-info mt-4 ml-2">Retornar</a>
    </form>

    <div class="mt-3">
      <template x-if="message">
        <div :class="messageClass" x-text="message"></div>
      </template>
    </div>
  </div>
</div>

<script>
  window.onload = function () { 
      // windowOnLoad(); // Verifique se essa função existe no seu base.html, senão comente
      const localErro = "{{erro}}"; 
      if (localErro != "") alert(localErro); 
  };

  function emprestimoForm() {
    return {
      form: {
        clienteid: '',
        livroid: '',
        valoremprestimo: '', // <--- ADICIONADO AQUI: Obrigatório para o backend
        dataemprestimo: '',
        datadevolucao: '',
        removido: false
      },
      message: '',
      messageClass: '',

      async insertForm() {
        // Validação básica antes de enviar
        if (!this.form.valoremprestimo || !this.form.clienteid || !this.form.livroid) {
            alert("Preencha todos os campos obrigatórios!");
            return;
        }

        try {
          const response = await fetch('/emprestimos/InsertEmprestimos', {
            method: 'POST',
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(this.form)
          });
          
          const result = await response.json();
          
          if (result.status == "ok") {
            alert("Empréstimo cadastrado com sucesso e conta gerada!");
            window.location.href = "/emprestimos/ManutEmprestimos";
          } else {
            this.message = `Erro: ${result.msg || JSON.stringify(result)}`;
            this.messageClass = 'alert alert-danger';
          }
        } catch (error) {
          this.message = `Erro de conexão: ${error.message}`;
          this.messageClass = 'alert alert-danger';
        }
      }
    };
  }
</script>
{% endblock %}